{
  "name": "api",
  "scripts": {
    "start": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register -r ts-node/register/transpile-only ./dist/server",
    "build": "tsc",
    "dev": "npm run run:dev -- ./src/server",
    "migrations:up": "if-env NODE_ENV=production && npm run typeorm:prod migration:run || npm run typeorm:dev migration:run",
    "migrations:down": "if-env NODE_ENV=production && npm run typeorm:prod migration:revert || npm run typeorm:dev migration:revert",
    "migrations:redo": "npm run migrations:down && npm run migrations:up",
    "migrations:create": "ts-node-dev ./src/lib/typeorm-cli migration:create ./src/migrations/${npm_config_name}",
    "typeorm:prod": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register -r ts-node/register/transpile-only ./dist/lib/typeorm-cli -d ./dist/lib/data-source",
    "typeorm:dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register ./src/lib/typeorm-cli -d ./src/lib/data-source.ts",
    "run:dev": "ts-node-dev -r ./src/initialize -r dotenv/config --respawn --transpile-only",
    "service": "TS_NODE_BASEURL=./dist node -r ./dist/initialize -r ts-node/register/transpile-only ./dist/services/run",
    "service:dev": "ts-node -r ./src/initialize -r dotenv/config ./src/services/run",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "@react-email/components": "^0.0.31",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pg": "^8.13.1",
    "react": "^18.2.0",
    "react-email": "^3.0.4",
    "resend": "^4.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@floyd/schema": "*",
    "@floyd/tsconfig": "*",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "dotenv": "^16.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
